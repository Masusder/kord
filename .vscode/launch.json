    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'klib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=kord"
                ],
                "filter": {
                    "name": "klib",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'kord'",
            "cargo": {
                "args": [
                    "+nightly",
                    "build",
                    //"--bin=kord",
                    //"--package=kord",
                    "--features",
                    "ml",
                    "--features",
                    "ml_gpu"
                ],
                "filter": {
                    "name": "kord",
                    "kind": "bin"
                }
            },
            "args": ["ml", "train"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'kord'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=kord",
                    "--package=kord"
                ],
                "filter": {
                    "name": "kord",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}